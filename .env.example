# MongoDB Connection
# Replace with your MongoDB connection string
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database?appName=appname

# Alternative: Use DATABASE_URL (for backward compatibility)
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database?appName=appname

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Secret (for session management)
# Generate a secure random string for production
SESSION_SECRET=your-secret-key-here
