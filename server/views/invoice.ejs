<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice <%= invoice.number %> - <%= company.name %></title>
  
  <!-- Inter Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'system-ui', '-apple-system', 'sans-serif'],
            mono: ['Courier New', 'Courier', 'monospace'],
          },
          colors: {
            brand: {
              50: '#f0fdfa',
              100: '#ccfbf1',
              500: '#14b8a6',
              600: '#0d9488',
              700: '#0f766e',
            }
          }
        }
      }
    }
  </script>
  
  <style>
    @media print {
      body {
        background: white !important;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
      .invoice-card {
        box-shadow: none !important;
        max-width: 100% !important;
        margin: 0 !important;
      }
      .no-print {
        display: none !important;
      }
    }
    
    /* Match PDF styling */
    .zebra-stripe:nth-child(even) {
      background-color: #f9fafb;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen font-sans antialiased">
  
  <!-- Print Button (hidden on print) -->
  <div class="no-print fixed top-4 right-4 z-50 flex gap-2">
    <button 
      onclick="window.print()" 
      class="bg-brand-600 hover:bg-brand-700 text-white px-4 py-2 rounded-lg shadow-lg flex items-center gap-2 transition-colors"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
      </svg>
      Print Invoice
    </button>
    <button 
      onclick="window.close()" 
      class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg shadow-lg flex items-center gap-2 transition-colors"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      Close
    </button>
  </div>

  <!-- Main Invoice Container -->
  <div class="py-8 px-4">
    <div class="invoice-card max-w-[800px] mx-auto bg-white rounded-md shadow-lg overflow-hidden">
      
      <!-- Header Section - Teal background -->
      <div class="bg-brand-600 px-6 py-4">
        <div class="flex items-start justify-between">
          <!-- Company Info -->
          <div class="flex items-center gap-3">
            <% if (company.logoUrl) { %>
              <div class="w-11 h-11 bg-white rounded-md p-0.5 flex items-center justify-center">
                <img src="<%= company.logoUrl %>" alt="<%= company.name %>" class="w-10 h-10 rounded object-contain">
              </div>
            <% } else { %>
              <div class="w-11 h-11 rounded-md bg-white/20 flex items-center justify-center">
                <span class="text-xl font-bold text-white"><%= company.name.charAt(0) %></span>
              </div>
            <% } %>
            <div>
              <h1 class="text-lg font-bold text-white"><%= company.name %></h1>
              <p class="text-brand-100 text-xs"><%= company.tagline %></p>
            </div>
          </div>
          
          <!-- Invoice Label -->
          <div class="bg-white/20 rounded px-3 py-2 text-right">
            <p class="text-[10px] uppercase tracking-wider text-brand-100">Invoice</p>
            <p class="text-base font-bold text-white"><%= invoice.number %></p>
          </div>
        </div>
      </div>

      <!-- Meta Row - Gray background -->
      <div class="px-6 py-3 bg-gray-50 border-b border-gray-100">
        <div class="flex items-center justify-between text-xs">
          <div class="flex items-center gap-4 text-gray-600">
            <span><%= company.phone %></span>
            <span><%= company.email %></span>
          </div>
          <div class="text-gray-600">
            <span class="font-semibold text-gray-800">Date:</span> <%= invoice.date %>
          </div>
        </div>
      </div>

      <!-- Bill To & Payment Info Columns -->
      <div class="px-6 py-4">
        <div class="grid grid-cols-2 gap-4">
          <!-- Bill To -->
          <div class="bg-gray-50 rounded-md p-4 border border-gray-100">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-0.5 h-4 bg-brand-500 rounded-full"></div>
              <h3 class="text-[10px] font-semibold uppercase tracking-wider text-gray-500">Bill To</h3>
            </div>
            <div class="space-y-1">
              <p class="text-sm font-semibold text-gray-900"><%= client.name %></p>
              <% if (client.email) { %>
                <p class="text-xs text-gray-600"><%= client.email %></p>
              <% } %>
              <% if (client.address) { %>
                <p class="text-xs text-gray-600 leading-relaxed"><%= client.address %></p>
              <% } %>
              <% if (client.website) { %>
                <p class="text-xs text-brand-600"><%= client.website %></p>
              <% } %>
            </div>
          </div>

          <!-- Payment Info -->
          <div class="bg-gray-50 rounded-md p-4 border border-gray-100">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-0.5 h-4 bg-brand-500 rounded-full"></div>
              <h3 class="text-[10px] font-semibold uppercase tracking-wider text-gray-500">Payment Info</h3>
            </div>
            <div class="space-y-1.5 text-xs">
              <div class="flex justify-between">
                <span class="text-gray-500">Method:</span>
                <span class="font-medium text-gray-900"><%= payment.method %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-500">Beneficiary:</span>
                <span class="font-medium text-gray-900"><%= payment.beneficiaryName %></span>
              </div>
              <% if (payment.accountNumber) { %>
                <div class="flex justify-between">
                  <span class="text-gray-500">Account No:</span>
                  <span class="font-medium text-gray-900 font-mono"><%= payment.accountNumber %></span>
                </div>
              <% } %>
              <% if (payment.ifscCode) { %>
                <div class="flex justify-between">
                  <span class="text-gray-500">IFSC:</span>
                  <span class="font-medium text-gray-900 font-mono"><%= payment.ifscCode %></span>
                </div>
              <% } %>
              <% if (payment.bankName) { %>
                <div class="flex justify-between">
                  <span class="text-gray-500">Bank:</span>
                  <span class="font-medium text-gray-900"><%= payment.bankName %></span>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Line Items Table -->
      <div class="px-6 pb-4">
        <div class="overflow-hidden rounded-md border border-gray-200">
          <table class="w-full">
            <thead>
              <tr class="bg-brand-600 text-white">
                <th class="text-left px-3 py-2 text-[10px] font-semibold uppercase tracking-wider">Description</th>
                <th class="text-center px-3 py-2 text-[10px] font-semibold uppercase tracking-wider w-16">Qty</th>
                <th class="text-right px-3 py-2 text-[10px] font-semibold uppercase tracking-wider w-24">Unit Price</th>
                <th class="text-right px-3 py-2 text-[10px] font-semibold uppercase tracking-wider w-24">Amount</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% items.forEach(function(item, index) { %>
                <tr class="zebra-stripe">
                  <td class="px-3 py-2.5 text-xs text-gray-900"><%= item.description %></td>
                  <td class="px-3 py-2.5 text-xs text-gray-600 text-center"><%= item.quantity %></td>
                  <td class="px-3 py-2.5 text-xs text-gray-600 text-right font-mono"><%= item.unitPrice %></td>
                  <td class="px-3 py-2.5 text-xs text-gray-900 text-right font-semibold font-mono"><%= item.amount %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Totals Section -->
      <div class="px-6 pb-4">
        <div class="flex justify-end">
          <div class="w-56">
            <div class="bg-gray-50 rounded-md overflow-hidden border border-gray-200">
              <div class="flex justify-between px-3 py-2 border-b border-gray-200">
                <span class="text-[10px] text-gray-500">Subtotal</span>
                <span class="text-[10px] font-medium text-gray-900 font-mono"><%= totals.subtotal %></span>
              </div>
              <div class="flex justify-between px-3 py-2 border-b border-gray-200">
                <span class="text-[10px] text-gray-500">Tax (<%= totals.taxRate || '0' %>%)</span>
                <span class="text-[10px] font-medium text-gray-900 font-mono"><%= totals.tax %></span>
              </div>
              <div class="flex justify-between px-3 py-2 border-b border-gray-200 bg-gray-100">
                <span class="text-[10px] font-semibold text-gray-700">Grand Total</span>
                <span class="text-[10px] font-bold text-gray-900 font-mono"><%= totals.grandTotal %></span>
              </div>
              <% if (totals.amountPaid && totals.amountPaidValue > 0) { %>
                <div class="flex justify-between px-3 py-2 border-b border-gray-200">
                  <span class="text-[10px] text-green-600">Amount Paid</span>
                  <span class="text-[10px] font-medium text-green-600 font-mono">- <%= totals.amountPaid %></span>
                </div>
              <% } %>
              <div class="flex justify-between px-3 py-3 bg-brand-600 text-white">
                <span class="text-xs font-semibold">Balance Due</span>
                <span class="text-sm font-bold font-mono"><%= totals.balanceDue %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Amount in Words -->
      <div class="px-6 pb-4">
        <div class="bg-brand-50 rounded px-3 py-2 border border-brand-100">
          <p class="text-[10px] text-brand-700">
            <span class="font-semibold">Balance due in words:</span> <%= totals.balanceInWords || totals.amountInWords %>
          </p>
        </div>
      </div>

      <!-- Notes Section -->
      <% if (notes) { %>
        <div class="px-6 pb-4">
          <div class="bg-amber-50 rounded-md p-3 border border-amber-100 flex gap-3">
            <div class="w-5 h-5 rounded-full bg-amber-400 flex items-center justify-center flex-shrink-0">
              <span class="text-[10px] font-bold text-white">i</span>
            </div>
            <div>
              <h4 class="text-xs font-semibold text-amber-800 mb-1">Notes</h4>
              <p class="text-[10px] text-amber-700 leading-relaxed"><%= notes %></p>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Terms Section -->
      <% if (terms) { %>
        <div class="px-6 pb-4">
          <div class="bg-gray-50 rounded-md p-3 border border-gray-100">
            <h4 class="text-[9px] font-semibold uppercase tracking-wider text-gray-500 mb-2">Terms & Conditions</h4>
            <div class="text-[9px] text-gray-600 leading-relaxed space-y-0.5">
              <% 
                const termLines = terms.split(/(?=\d+[\.\)\:])|[\n\r]+/).filter(line => line.trim());
                termLines.forEach(function(line) { 
              %>
                <p><%= line.trim() %></p>
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Footer: QR Code & Signature -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
        <div class="flex justify-between items-start">
          <!-- QR Code Section -->
          <% if (footer.showQr || footer.upiId) { %>
            <div>
              <p class="text-[10px] font-semibold uppercase tracking-wider text-gray-500 mb-2">Scan to Pay</p>
              <div class="flex items-start gap-3">
                <% if (footer.qrCodeUrl) { %>
                  <div class="w-16 h-16 bg-white rounded-md border border-gray-200 p-1">
                    <img src="<%= footer.qrCodeUrl %>" alt="UPI QR Code" class="w-full h-full object-contain">
                  </div>
                <% } else { %>
                  <div class="w-16 h-16 bg-white rounded border-2 border-dashed border-gray-300 flex items-center justify-center">
                    <span class="text-[9px] text-gray-400">UPI QR</span>
                  </div>
                <% } %>
                <div>
                  <% if (footer.upiId) { %>
                    <p class="text-[9px] text-brand-600">UPI: <%= footer.upiId %></p>
                  <% } %>
                  <% if (footer.paymentLink) { %>
                    <p class="text-[9px] text-gray-500 mt-1">Or pay online</p>
                  <% } %>
                </div>
              </div>
            </div>
          <% } else { %>
            <div></div>
          <% } %>

          <!-- Signature -->
          <div class="text-right">
            <div class="w-28 border-b border-gray-400 mb-2 h-8 inline-block"></div>
            <p class="text-xs font-semibold text-gray-900"><%= footer.signatoryName %></p>
            <p class="text-[10px] text-gray-500"><%= footer.signatoryTitle || 'Authorized Signatory' %></p>
            <p class="text-[9px] text-gray-400 mt-0.5"><%= footer.signDate %></p>
          </div>
        </div>
      </div>

      <!-- Footer Branding -->
      <div class="px-6 py-3 bg-gray-900 text-center">
        <p class="text-[10px] text-gray-400">
          Thank you for your business! | Generated by <span class="text-teal-400 font-medium"><%= company.name %></span>
        </p>
      </div>

    </div>
  </div>

</body>
</html>
